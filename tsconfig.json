{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./src",
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./src/node_modules/**/*.ts"]
}
